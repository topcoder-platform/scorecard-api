{
  "name": "tc-scorecard-api-v5",
  "version": "1.0.0",
  "description": "TopCoder Scorecard API v5",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "create-tables": "node scripts/createTables.js",
    "delete-tables": "node scripts/deleteTables.js",
    "seed-tables": "node scripts/seedTables.js",
    "create-index": "node scripts/createIndex.js",
    "delete-index": "node scripts/deleteIndex.js",
    "view-es-data": "node scripts/viewEsData.js",
    "test": "cross-env NODE_ENV=test mocha test/unit/*.test.js --timeout 30000 --require test/prepare.js --exit",
    "test:cov": "nyc --reporter=html --reporter=text npm run test"
  },
  "author": "TCSCODER",
  "license": "none",
  "devDependencies": {
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "mocha": "^9.1.2",
    "nyc": "^15.1.0",
    "rewire": "^5.0.0",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^6.8.8",
    "aws-sdk": "^2.466.0",
    "bluebird": "^3.5.1",
    "body-parser": "^1.15.1",
    "config": "^3.0.1",
    "cors": "^2.7.1",
    "dynamoose": "^1.10.0",
    "express": "^4.15.4",
    "express-interceptor": "^1.2.0",
    "get-parameter-names": "^0.3.0",
    "http-aws-es": "^6.0.0",
    "http-status-codes": "^1.3.0",
    "joi": "^14.0.0",
    "lodash": "^4.17.19",
    "prompt-confirm": "^2.0.4",
    "tc-core-library-js": "appirio-tech/tc-core-library-js.git#v2.6.7",
    "uuid": "^3.3.2",
    "winston": "^3.1.0"
  },
  "engines": {
    "node": "10.x"
  },
  "standard": {
    "ignore": [
      "/docs"
    ],
    "env": [
      "mocha"
    ]
  },
  "nyc": {
    "all": true,
    "check-coverage": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/common/logger.js",
      "src/routes.js"
    ]
  }
}